generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id          String  @id @default(uuid())
  title       String
  price       Int
  imagePath   String
  imageName   String?
  filePath    String?
  about       String
  widgetGC    String?
  canPurchase Boolean @default(true)
}

